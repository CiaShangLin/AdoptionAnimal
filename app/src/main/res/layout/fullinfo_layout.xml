<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/fullImg"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="流水編號:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="實際所在地:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_place"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="類型:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_kind"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="性別:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="體型:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_bodytype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="毛色:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_colour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="年紀:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="絕育:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_sterilization"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="狂犬病疫苗:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_bacterin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="尋獲地:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_foundplace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="狀態:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="資料備註:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_remark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="認養時間(起):"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_opendate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="認養時間(迄):"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_closeddate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.00"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="資料異動時間:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_update"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="textview"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="資料建立時間"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_createtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="textview"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="收容所名稱:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_shelter_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="textview"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="異動時間:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_cDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="textview"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="135dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:text="聯絡電話:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/full_tel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="textview"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
